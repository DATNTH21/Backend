<h1>Select a GitHub Repository</h1>
<form action="/repo/select" method="POST">
    <label for="repos">Choose a repository:</label>
    <select id="repos" name="selectedRepo">
        <option value="" disabled selected>Select your repository</option>
        <% repos.forEach(repo => { %>
            <option value="<%= repo.html_url %>"><%= repo.name %></option>
        <% }) %>
    </select>
    <button type="submit">Submit</button>
</form>
